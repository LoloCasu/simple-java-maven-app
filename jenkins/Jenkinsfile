pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                bat '"%MAVEN_HOME%\\bin\\mvn" -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat '"%MAVEN_HOME%\\bin\\mvn" test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') { 
            steps {
                bat 'jenkins\\scripts\\deliver.bat'
            }
        }
    }
}
