pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }
        stage('Test') {
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Analyse Steps') {
            steps {
                sh '''
          echo "Analyse des Ã©tapes Jenkins" > steps_report.txt
          grep -E '\

\[Pipeline\\]stage|\\[Pipeline\\]\\{ \\(|Finished: SUCCESS' jenkins_log.txt | \
          awk '
            /\\[Pipeline\\]stage/ { stage_time = last_time }
            /\\[Pipeline\\]\\{ \\(/ {
              stage_name = $0
              sub(/^.*\\(/, "", stage_name)
              sub(/\\).*/, "", stage_name)
              print stage_time, stage_name
            }
            /^\\[[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}/ {
              match($0, /^\\[([0-9T:\\.Z-]+)\\]/, arr)
              last_time = arr[1]
            }
          ' >> steps_report.txt
        '''
            }
        }
        stage('Deliver') { 
            steps {
                withMaven(maven : 'maven') {
                    //sh './jenkins/scripts/audit.sh'
                }
            }
        }
    }
}
